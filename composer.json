{
    "name": "ninja-unicorns/wysiwyg-accordion",
    "description": "Easily place an accordion in the wysiwyg via a related set of AccordionItems",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",
    "keywords": [
        "Ninja Unicorns",
        "silverstripe",
        "Shortcode",
        "Accordion",
        "Ninja",
        "Unicorns"
    ],
    "config": {
        "process-timeout": 900
    },
    "authors": [
        {
            "name": "Ninja Unicorns",
            "email": "ninja-unicorns@silverstripe.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "silverstripe/framework": "^4.2",
        "silverstripe/cms": "^4.2",
        "symbiote/silverstripe-gridfieldextensions": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "suggest": {
        "sheadawson/silverstripe-shortcodable": "Use Shortcodable to easily insert the shortcode"
    },
    "autoload": {
        "psr-4": {
            "NinjaUnicorns\\WysiwygAccordion\\": "src/",
            "NinjaUnicorns\\WysiwygAccordion\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
